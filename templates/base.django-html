<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}FaceTwitInstaSnapTok{% endblock %}</title>
    <link
      rel="stylesheet"
      href="{{ url_for('static', filename='styles.css') }}"
    />
  </head>
  <body>
    <header>
      {% block header %}<h1>FaceTwitInstaSnapTok</h1>
      {% if session['username'] %}
      Welcome {{ session["username"] }}!
      {% else %}
      Welcome Guest!
      {% endif %}
      {% endblock %}
      {% if session['username'] %} {% endif %}
      <nav>
        <ul class="navbar">
          <li><a href="{{ url_for('home') }}">Home</a></li>
          {% if session['username'] %}
          <li><a href="{{ url_for('users_list') }}">Users</a></li>
          <li><a href="{{ url_for('friends', username=session['username'])}}">Friends</a></li>
          <li><a href="{{ url_for('profile') }}">Profile</a></li>
          <li><a href="{{ url_for('logout') }}">Logout</a></li>
          {% else %}
          <li><a href="{{ url_for('register') }}">Register</a></li>
          <li><a href="{{ url_for('login') }}">Login</a></li>
          {% endif %}
        </ul>
      </nav>
    </header>

    {% with messages = get_flashed_messages() %} {% if messages %}
    <div class="message-container">
      <ul>
        {% for message in messages %}
        <li>{{ message }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %} {% endwith %}

    <section>{% block content %}{% endblock %}</section>

    <footer>
      <p>&copy; 2023 FaceTwitInstaSnapTok Inc.</p>
    </footer>
  </body>
</html>
